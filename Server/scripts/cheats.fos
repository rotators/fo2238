void SetMapId(string location, uint mapprotoid)
{
    Map@ map = GetMapByPid(mapprotoid, 0);
    if(!valid(map))
    {
        DLog("Couldn't find map object for " + location);
        return;
    }

    WLog("cheats", "Setting mapid for " + location + " to " + map.Id);
    Maps.set(location, map.Id);
}

