        return;

    uint accountowner = BankGetAccountOwner(bank, acc);
    player.Say(SAY_NETMSG, "Owner: " + GetSafePlayerName(accountowner) + " (" + accountowner + ")");
    player.Say(SAY_NETMSG, "Balance: " + BankGetAccountBalance(bank, acc));

    if(verbose)
    {
