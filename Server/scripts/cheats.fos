    }
    if(show)
    {
        player.Say(SAY_NETMSG, "Showing location " + locId + " to " + target.Name);
        target.SetKnownLoc(true, locId);
    }
    else
    {
        player.Say(SAY_NETMSG, "Hiding location " + locId + " from " + target.Name);
        target.UnsetKnownLoc(true, locId);
    }
}

