                    else
                        owner = "(" + map_owner + ")";
                    y = draw("Owner: " + owner, x, y);
                }

                int map_created = GetAnswerData(q, GMT_DATA_MAP_CREATED);
                if(map_created > 0)
                {
                    y = draw("Created: " + GetTimeString("%DAY% %MONTH-STR% %YEAR%, %HOUR%:%MINUTE%", map_created), x, y);
                }
            }             // q
