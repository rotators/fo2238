                    y = draw(
                        (map_faction >= 200 ? "" : "NPC ") + "Faction:" +
                        (map_fname >= 1000004 ? " " + GetMsgStr(TEXTMSG_TEXT, map_fname) : "") +
                        " (" + map_faction + ")" +
                        (map_fmembers == 0 ? "" : ": " + map_fmembers + " member" + (map_fmembers == 1 ? "" : "s")),
