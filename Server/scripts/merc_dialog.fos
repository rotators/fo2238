        return;

    IMerc@ merc = GetMerc(CURRENT_MERC_ID);
    if(!valid(merc))
    {
        text += "$price" + "invalid_merc";
        return;
    }

    if(uint(merc.GetSellPrice()) == 0)
    {
        text += "$price" + "invalid_sellprice";
        return;
    }
    text += "$price" + merc.GetSellPrice();
}

