void dlg_ShowMaleSlavesPrices(Critter& player, Critter@ npc, string@ text)
{
    if(!IS_DIALOG_GENERATED(text))
        return;

    for(uint i = 0; i < 3; i++)
    {
        IMerc@ slave = GetMerc(12 + i);
        if(!valid(slave))
        {
            text += ("$price" + i) + "invalid_slave";
            continue;
        }
        if(slave.GetCost() == 0)
        {
            text += ("$price" + i) + "invalid_cost";
            continue;
        }
        text += ("$price" + i) + slave.GetCost();
    }
}

