int CountMilitia(Map@ map)
{
    array<Critter@> crits;
    uint            count = 0;
    uint            num = map.GetCritters(0, FIND_ALL | FIND_ONLY_NPC, crits);
    for(uint i = 0; i < num; i++)
    {
        if(_CritHasExtMode(crits[i], MODE_EXT_MILITIA))
            count++;
    }
    return count;
}

