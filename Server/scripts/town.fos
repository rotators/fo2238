// Take some bag militia can use
int SelectBag(uint crpid)
{
    shuffle_array(bags, uint);
    for(uint i = 0; i < bags.length() - 1; i++)
    {
        if(!HasUnusableWeapon(crpid, bags[i]))
            return bags[i];
    }
    return 1;
}

