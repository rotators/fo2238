            if(locpid == LOCATION_BrokenHills)
                SetGroupInfo(cr, FACTION_BH_MUTANTS, 3, FACTION_MODE_ALWAYS);
            else if(locpid == LOCATION_TheDen)
                SetGroupInfo(cr, FACTION_SLAVERS_GUILD, 3, FACTION_MODE_ALWAYS);
